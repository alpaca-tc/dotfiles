snippet     exists?
abbr        if exists('...') | let ... | endif
options     word
  if !exists('${1:valiable}')
    let $1 = ${2}
  endif

snippet     loaded
abbr        loaded
options     word
  if exists('g:${1:variable}') ${2:|| (v:version < 700)}
    finish
  endif
  let g:$1 = 1

  let s:save_cpo = &cpo
  set cpo&vim

  let &cpo = s:save_cpo
  unlet s:save_cpo

snippet     neol
  NeoBundle ${1}, {
  \ 'depends' : [],
  \ 'build' : {
  \   'unix' : '',
  \   'mac'  : '',
  \ },
  \ 'autoload': {
  \   'mappings' : [],
  \   'commands' : [],
  \   ''
  \ }
  \ }

