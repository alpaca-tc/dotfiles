# Module: Shoulda::ActiveRecord::Matchers#{{{
# validation#{{{
snippet .with_message
abbr    .with_message(regexp)
options word
  .with_message(${1})

snippet allow_mass_assignment_of
abbr    allow_mass_assignment_of(value)
alias   mass_assignment_of allow_m
regexp  '\v((to|should|to_not|should_not)\s|\.$)'
options word
  allow_mass_assignment_of(${1:value})

snippet allow_value
abbr    allow_value(value).for(column)
alias   value_of allow_value
regexp  '\v((to|should|to_not|should_not)\s|\.$)'
options word
  allow_value(${1:value}).for(:${2:column})

snippet ensure_inclusion_of
abbr    ensure_inclusion_of(attr).in_range(...)
regexp  '\v((to|should|to_not|should_not)\s|\.$)'
alias   inclusion
options word
  ensure_inclusion_of(${1:column}).in_${2:range_or_array}(${3:1..100})${4:.with_low_message(${5:message\})}${6:.with_high_message${7:message\}}

snippet ensure_exclusion_of
abbr    ensure_exclusion_of(...)
alias   exclusion within
options word
  ensure_exclusion_of(${1:column}).
    in_${2:range_or_array}(${3:1..100})${4:.with_low_message(${5:message\})}${6:.with_high_message${7:message\}}

snippet validate_confirmation_of
abbr    validate_confirmation_of(...)
regexp  '\v((to|should|to_not|should_not)\s|\.$)'
alias   confirmation
options word
  validate_confirmation_of(${1:column})

snippet ensure_length_of
abbr    ensure_length_of(...).is_at_least(...)
alias   length_of
regexp  '\v((to|should|to_not|should_not)\s|\.$)'
options word
  ensure_length_of(${1:column})${2:.is_at_least(${3\}})${4:.is_at_most(${5\}})${6:.with_short_message(/${7:regext\}/) }

snippet validate_acceptance_of
abbr    validate_acceptance_of(...)
regexp  '\v((to|should|to_not|should_not)\s|\.$)'
alias   acceptance
options word
  validate_acceptance_of(${1:column})

snippet validate_format_of
abbr    validate_format_of(...)
alias   format_of
regexp  '\v((to|should|to_not|should_not)\s|\.$)'
options word
  validate_format_of(${1:column}).with(${2:message})

snippet validate_numericality_of
abbr    validate_numericality_of(...)
alias   numericality
regexp  '\v((to|should|to_not|should_not)\s|\.$)'
options word
  validate_numericality_of(${1:column})

snippet validate_presence_of
abbr    validate_presence_of(...)
alias   presence
regexp  '\v((to|should|to_not|should_not)\s|\.$)'
