" initialize
" directory initialize"{{{
if g:my_settings.initialize
  " initialize directory
  if exists('g:my_settings.dir')
    let keys =  keys( g:my_settings.dir )
    for idx in keys
      let key = keys[idx]
      let directory = g:my_settings.dir[key]
      if !isdirectory(directory)
        call mkdir(directory, 'p')
        echomsg "create directory : " . directory
      endif
    endfor
  endif
endif
"}}}

