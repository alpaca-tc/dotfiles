methods=File/s.copy.ftools,File/s.move.ftools,File/s.cmp.ftools,File/s.rm_f.ftools,File/s.makedirs.ftools,File/s.install.ftools,File/s.catname.ftools,File/s.syscopy.ftools,File/s.chmod.ftools
