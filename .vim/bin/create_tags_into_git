#!/bin/sh

git_root_dir=`git rev-parse --show-toplevel`
echo $git_root_dir

if [ -d "${git_root_dir}" ]; then
    cd ${git_root_dir}
    /Applications/MacVim.app/Contents/MacOS/ctags -R --languages=-css --languages=-sass --languages=-scss --languages=-js --sort=yes -f ${git_root_dir}/.git/tags ${git_root_dir}
fi
