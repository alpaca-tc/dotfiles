{

	"default_module": "powerline.segments.vim",
	"segments": {
		"left": [
			{
				"name": "mode",
				"exclude_modes": ["nc"]
			},
			{
				"module" : "linepower.segments",
				"name": "unite",
				"draw_soft_divider": true
			},
			{
				"type": "string",
				"highlight_group": ["background"],
				"draw_soft_divider": false,
				"draw_hard_divider": false,
				"width": "auto"
			}
		],
		"right": [
			{
				"name": "file_name",
				"draw_soft_divider": true
			}
		]

	}
}
